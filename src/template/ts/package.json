{
    "name": "<%= name %>",
    "version": "1.0.0",
    "description": "<%= name %> is the ultimate backend solution",
    "main": "src/server.js",
    "scripts": {
        "setup": "npm install && npm update",
        "tsc": "tsc",
        "build": "npm run tsc",
        "start": "ts-node-dev --transpileOnly ./src/server.ts",
        "dev": "ts-node-dev --respawn --transpileOnly ./src/server.ts",
        "prod": "tsc && node ./build/src/server.js"
    },
    "keywords": [
        "express",
        "backend",
        "<%= name %>"
    ],
    "license": "<%= license %>",
    "dependencies": {
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "http-status": "^1.3.2",
        "morgan": "^1.9.1",
        "mandatoryenv": "^1.1.1",
        "module-alias": "^2.2.2",
        "@types/express": "^4.17.1",
        "ts-node-dev": "^1.0.0-pre.43",
        "typescript": "^3.6.3",<% if(database == 'mysql') { %>
        "mysql2": "^1.7.0",
        "sequelize": "^5.19.2",<% } if(database == 'mariadb') { %>
        "mariadb": "^2.1.1",
        "sequelize": "^5.19.2",<% } if(database == 'postgres') { %>
        "pg": "^7.12.1",
        "pg-hstore": "^2.3.3",
        "sequelize": "^5.19.2",<% } if(database == 'mssql') { %>
        "tedious": "^6.4.0",
        "sequelize": "^5.19.2",<% } if(database == 'mysql (no sequelize)') { %>
        "mysqlm": "^1.5.0",<% } %>
        "express": "^4.17.1"
    }<% if(aliases === true) { %>,
    "_moduleAliases": {
        "@root"      : "src",
        "@controllers" : "src/controllers",
        "@models" : "src/models",
        "@routes" : "src/routes"
    }<% } %>
}